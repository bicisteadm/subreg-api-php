{
  "name": "soukicz/subreg-api",
  "description": "PHP client for working with Subreg.cz API",
  "license": ["MIT"],
  "authors": [
    {
      "name": "Petr Soukup",
      "email": "soukup@simplia.cz"
    },
    {
      "name": "Jakub Bouček",
      "email": "pan@jakubboucek.cz"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-soap": "*",
    "ext-json": "*",
    "psr/log": "^1.1",
    "nette/schema": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Soukicz\\SubregApi\\": "src/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.48",
    "symplify/easy-coding-standard": "^8.3.28"
  },
  "scripts": {
    "phpstan": "phpstan analyse src --level 5",
    "ecs": "ecs check src --set psr12",
    "ecs-fix": "ecs check src --set psr12 --fix"
  }
}
